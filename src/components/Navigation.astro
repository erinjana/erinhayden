---
const links = [
  { href: '/', text: 'Home' },
  { href: '/about', text: 'About' },
  { href: '/services', text: 'Services' },
  { href: '/bravery-books', text: 'Bravery Books' },
  { href: '/blog', text: 'Blog' },
  { href: '/contact', text: 'Contact' },
];

const { pathname } = Astro.url;
---

<nav class="nav">
  <ul class="nav-list">
    {links.map((link) => (
      <li>
        <a href={link.href} class={pathname === link.href ? 'active' : ''}>
          {link.text}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  .nav-list {
    display: flex;
    list-style: none;
    margin: 0;
    padding: 0;
    gap: 1.5rem;
  }

  .nav-list a {
    font-weight: 500;
    color: var(--color-text);
    font-size: 1rem;
    position: relative;
  }

  .nav-list a:hover,
  .nav-list a.active {
    color: var(--color-accent);
  }

  .nav-list a.active::after {
    content: '';
    position: absolute;
    bottom: -4px;
    left: 0;
    width: 100%;
    height: 2px;
    background-color: var(--color-accent);
  }

  @media (max-width: 768px) {
    .nav-list {
      display: none; /* Mobile menu to be implemented if needed, for now simple hide on small screens or stack */
      flex-direction: column;
      position: absolute;
      top: var(--header-height);
      left: 0;
      width: 100%;
      background: var(--color-bg);
      padding: 1rem;
      box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    
    /* Simple mobile fallback for now: just stack them if we don't have a toggle */
    /* Actually, let's keep it simple and just wrap for now or scroll */
    .nav-list {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 1rem;
        position: static;
        box-shadow: none;
    }
  }
</style>
