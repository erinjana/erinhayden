---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
const { pathname } = Astro.url;

// Check if we are on Home, About, or Services pages (ignoring trailing slashes)
const cleanPath = pathname.replace(/\/$/, "") || "/";
const showMailerLite = ["/", "/about", "/services"].includes(cleanPath);
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Erin Hayden - Educational Consulting, Writing, Disability Advocacy, and Publishing" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Erin Hayden</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link
  href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&family=Inter:wght@300;400;500;600&family=Pacifico&family=Allura&display=swap"
  rel="stylesheet"
/>

    {
      showMailerLite && (
        <!-- MailerLite Universal -->
        <script is:inline>
          (function(w,d,e,u,f,l,n){w[f]=w[f]||function(){(w[f].q=w[f].q||[])
          .push(arguments);},l=d.createElement(e),l.async=1,l.src=u,
          n=d.getElementsByTagName(e)[0],n.parentNode.insertBefore(l,n);})
          (window,document,'script','https://assets.mailerlite.com/js/universal.js','ml');
          ml('account', '2047556');
        </script>
        <!-- End MailerLite Universal -->
      )
    }
    <!-- DEBUG: Path={pathname} Clean={cleanPath} Show={showMailerLite} -->
	</head>
	<body>
		<Header />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	main {
		min-height: calc(100vh - var(--header-height) - 300px); /* Approximate footer height */
	}
</style>
