<style>
    .thank-you-box {
        max-width: 600px;
        margin: 0 auto;
        background: #fff;
        padding: 3rem;
        border-radius: var(--border-radius);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        border-top: 6px solid var(--color-accent);
    }

    .page-title {
        font-family: "Playfair Display", serif;
        font-size: 3rem;
        color: var(--color-primary);
        margin-bottom: 1rem;
    }

    .lead {
        font-size: 1.25rem;
        color: var(--color-text);
        margin-bottom: 2rem;
    }

    .message-body {
        font-size: 1.1rem;
        line-height: 1.6;
        color: #555;
    }

    .message-body p {
        margin-bottom: 1rem;
    }
</style>
